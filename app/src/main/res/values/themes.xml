<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Evaluation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!--        <item name="colorSecondaryVariant">@color/blue_700</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <!--        Typography-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Evaluation.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Evaluation.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Evaluation.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Evaluation.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Evaluation.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Evaluation.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Evaluation.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Evaluation.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Evaluation.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Evaluation.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Evaluation.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Evaluation.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Evaluation.Overline</item>
    </style>

    <style name="ThemeOverlay.Evaluation.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="ThemeOverlay.Evaluation.Admin" parent="Theme.Evaluation">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
    </style>

    <style name="ThemeOverlay.Evaluation.Toolbar" parent="Theme.Evaluation">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.Evaluation.Toolbar.OverflowIcon" parent="Theme.Evaluation">
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>

    <style name="MyActionButtonOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>


</resources>